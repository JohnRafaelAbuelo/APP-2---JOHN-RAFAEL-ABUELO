<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app2screen1"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/usersname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="169dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Hello,"
        android:textColor="#EBDBC4"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/jacketbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <Button
        android:id="@+id/jacketbtn"
        android:layout_width="233dp"
        android:layout_height="69dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="271dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="72dp"
        android:backgroundTint="#EBDBC4"
        android:fontFamily="@font/poppins"


        android:soundEffectsEnabled="true"
        android:text="browse jackets"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/shirtbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"></Button>

    <Button
        android:id="@+id/shirtbtn"
        android:layout_width="233dp"
        android:layout_height="69dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="73dp"
        android:backgroundTint="#EBDBC4"
        android:fontFamily="@font/poppins"


        android:soundEffectsEnabled="true"
        android:text="browse shirts"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/bottombtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jacketbtn"
        tools:ignore="MissingConstraints"></Button>

    <Button
        android:id="@+id/bottombtn"
        android:layout_width="233dp"
        android:layout_height="83dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="94dp"
        android:backgroundTint="#EBDBC4"
        android:fontFamily="@font/poppins"


        android:soundEffectsEnabled="true"
        android:text="browse bottoms"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shirtbtn"
        tools:ignore="MissingConstraints"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>