<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shirtpage"
    tools:context=".Shirts">

    <Button
        android:id="@+id/shirtbtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginStart="136dp"
        android:layout_marginTop="332dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="361dp"
        android:backgroundTint="#EBDBC4"


        android:fontFamily="@font/poppins"
        android:soundEffectsEnabled="true"
        android:text="Get this item"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></Button>

    <Button
        android:id="@+id/shirtbtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginStart="136dp"


        android:layout_marginTop="240dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="78dp"
        android:backgroundTint="#EBDBC4"
        android:fontFamily="@font/poppins"
        android:soundEffectsEnabled="true"
        android:text="Get this item"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shirtbtn1"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>