<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sizeandpay"
    tools:context=".SizeAndPay">

    <TextView

        android:id="@+id/sizexs"
        android:layout_width="wrap_content"
        android:text="XS"
        android:textColor="#AB4F84"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView

        android:id="@+id/sizes"
        android:layout_width="wrap_content"
        android:text="S"
        android:textColor="#AB4F84"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView

        android:id="@+id/sizem"
        android:layout_width="wrap_content"
        android:text="M"
        android:textColor="#AB4F84"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView

        android:id="@+id/sizel"
        android:layout_width="wrap_content"
        android:text="L"
        android:textColor="#AB4F84"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView

        android:id="@+id/sizexl"
        android:layout_width="wrap_content"
        android:text="XL"
        android:textColor="#AB4F84"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView

        android:id="@+id/paypal"
        android:layout_width="wrap_content"
        android:text="PayPal"
        android:textColor="#AB4F84"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView

        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:text="Card"
        android:textColor="#AB4F84"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView

        android:id="@+id/cash"
        android:layout_width="wrap_content"
        android:text="Cash"
        android:textColor="#AB4F84"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />


    <Spinner
        android:id="@+id/elements1"
        android:layout_width="119dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginStart="146dp"

        android:layout_marginTop="-2dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="100dp"
        android:background="#EBDBC4"
        android:hint="Select"
        android:fontFamily="@font/poppins"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/elements2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="147dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Selection 1"
        android:fontFamily="@font/poppins"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/elements2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/elements1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="123dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"

        android:layout_marginTop="36dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="147dp"
        android:fontFamily="@font/poppins"
        android:text="Current:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/elements2"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/elements1"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/elements2"
        android:layout_width="269dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginStart="71dp"
        android:background="#EBDBC4"
        android:fontFamily="@font/poppins"
        android:textSize="20sp"

        android:layout_marginTop="-30dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="80dp"
        android:hint="Select"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/elements1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:fontFamily="@font/poppins"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="166dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Selection 2"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/elements2" />

    <TextView
        android:id="@+id/textView5"
        android:fontFamily="@font/poppins"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="123dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"

        android:layout_marginTop="27dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="166dp"
        android:text="Selection 2"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/elements2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="153dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:backgroundTint="#EBDBC4"
        android:textColorHint="@color/white"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>